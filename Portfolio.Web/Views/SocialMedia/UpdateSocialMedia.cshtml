@model SocialMedia
@{
    ViewData["Title"] = "Sosyal Medya Güncelleme Sayfası";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="SocialMediaId" />
    <div class="form-group">
        <label>Sosyal Medya Adı</label>
        <input type="text" class="form-control" asp-for="SocialMediaName" />
    </div>
    <div class="form-group">
        <label>Sosyal Medya Url</label>
        <input type="text" class="form-control" asp-for="SocialMediaUrl" />
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>

</form>


