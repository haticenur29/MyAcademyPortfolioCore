@model List<Testimonial>
@{
    ViewData["Title"] = "Referanslarım";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count= 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Unvan</th>
        <th>Yorum</th>
        <th>Yıldız</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>
                <img src="@item.ImageUrl" alt="@item.Name" width="80" height="80" style="object-fit:cover; border-radius:8px;" />
            </td>
            <td>@item.Name</td>
            <td>@item.Title </td>
            <td>@item.Comment </td>
            <td>@item.Review</td>
            <td>
                <button onclick="deleteTestimonial(@item.TestimonialId)" class="btn btn-outline-danger">Sil</button>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Referans Oluştur</a>

<script>

    function deleteTestimonial(id)
    {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal!",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Testimonial/DeleteTestimonial/" + id;
            }
        });
    }

</script>

