@model About
@*
    About Component Default
*@

<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <p class="fst-italic py-3">
                    @Model.Description
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@Model.BirthDate.ToString("d")</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.PhoneNumber</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@(DateTime.Now.Year - Model.BirthDate.Year)</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance Çalışma:</strong> <span>@(Model.IsAvailable ? "Mümkün" : "Mümkün Değil")</span></li>
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>

    </div>

</section><!-- /About Section -->