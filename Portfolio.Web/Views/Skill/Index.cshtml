@model List<Skill>
@{
    ViewData["Title"] = "Yeteneklerim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Yetenek Adı</th>
        <th>Seviye</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>

                <div class="progress-wrapper">
                    <div class="progress-value">@item.Percentage%</div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar"
                             style="width: @item.Percentage%;"
                             aria-valuenow="@item.Percentage" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                </div>

            </td>
            <td>
                <button onclick="deleteSkill(@item.SkillId)" class="btn btn-outline-danger">Sil</button>
                <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Skill/CreateSkill" class="btn btn-outline-primary">Yeni Yetenek Oluştur</a>

<script>

    function deleteSkill(id)
    {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal!",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Skill/DeleteSkill/" + id;
            }
        });
    }

</script>

